<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
>
    <title>Pebble Auth Client</title>
    <paths>
        <output>docs/build</output>
    </paths>

    <version number="latest">
        <api>
            <source dsn=".">
                <path>src</path>
            </source>
        </api>

        <guide>
            <source dsn=".">
                <path>docs/guide</path>
            </source>
            <output>guide</output>
        </guide>
    </version>

    <setting name="template.color" value="indigo"/>
    <setting name="guides.enabled" value="true"/>

</phpdocumentor>